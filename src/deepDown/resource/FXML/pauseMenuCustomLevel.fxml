<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="anchor" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="300.0" prefWidth="600.0"
            style="-fx-background-image: url(deepDown/resource/images/LevelEditorBackground.png); -fx-background-size: 10% 10%;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Rectangle height="300.0" opacity="0.75" width="600.0"/>
    <BorderPane prefHeight="300.0" prefWidth="600.0">
        <top>
            <Text text="Pause" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font size="34.0"/>
                </font>
            </Text>
        </top>
        <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <Button fx:id="resumeGameButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#resumeGamePressed" text="Resume Game">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="backToLEButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#backToLEButtonPressed" text="Back to Level Editor">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="backToMenuButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#backToMenuPressed" text="Back To Menu">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="quitGameButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#quitGamePressed" text="Quit"/>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
